%Use this package to describe asbstrac environments, such as thoerems, lemmas, propositions etc. Even meta-thm, meta-prop etc.


\usepackage{amsthm}

% THEOREMSTYLES (Visual Environment Structures)


%Theorem with break
% https://tex.stackexchange.com/questions/43966/how-to-make-the-optional-title-of-a-theorem-bold-with-amsthm

\newtheoremstyle{break}% name
  {}											                        % Space above, empty = `usual value'
  {}											                        % Space below
  {\itshape}									                    % Body font
  {}											                        % Indent amount (empty = no indent, \parindent = para indent)
  {\bfseries}									                    % Thm head font
  {}											                        % Punctuation after thm head
  {\newline}									                    % Space after thm head: \newline = linebreak
  {\thmname{#1}\thmnumber{ #2}\thmnote{ (#3)}}    % Thm head spec


\theoremstyle{break}

% Setting Theorem Style

\theoremstyle{break}

% Theorem Numbered, Un-Numbered
\newtheorem{thm}{Theorem}
\newtheorem*{thm*}{Theorem}

% Lemma Numbered,Un-Numbered
\newtheorem{lem}{Lemma}
\newtheorem*{lem*}{Lemma}

% Propostion Numbered, Un-Numbered
\newtheorem{prop}{Proposition}
\newtheorem*{prop*}{Proposition}

% Definition Numbered, Un-Numbered
\newtheorem{defn}{Definition}
\newtheorem*{defn*}{Defintion}

% Observation Numbered, Un-Numbered
\newtheorem{obs}{Observation}
\newtheorem*{obs*}{Observation}


% Exercise Numbered, Un-Numbered
\newtheorem{exr}{Exercise}
\newtheorem*{exr*}{Exercise}

